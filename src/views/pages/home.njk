{% extends "layouts/base.njk" %}

{% block bodyClass %}home-page{% endblock %}

{% block content %}
<div class="home">
    {# Hero Section #}
    {% if homeContent and homeContent.sections %}
        {% for section in homeContent.sections %}
            {% if section.type === 'hero_banner' or section.type === 'banner' %}
            <section class="hero-tw" aria-label="Featured content">
                <div class="hero-tw-content">
                    {% for block in section.blocks %}
                        {% if block.images and block.images.length > 0 %}
                        <div class="relative">
                            <div class="absolute inset-0 bg-gradient-to-r from-black/50 to-transparent z-10"></div>
                            <img 
                                src="{{ block.images[0].url }}"
                                alt="{{ block.images[0].alt | default(block.text | default('Featured banner')) }}"
                                class="w-full h-96 md:h-[600px] object-cover"
                                loading="eager"
                            >
                            {% if block.text or block.action %}
                            <div class="absolute inset-0 flex items-center justify-center z-20">
                                <div class="text-center text-white max-w-4xl mx-auto px-6">
                                    {% if block.text %}
                                    <h1 class="hero-tw-title">{{ block.text }}</h1>
                                    {% endif %}
                                    {% if block.action and block.action.page %}
                                    <a href="{{ block.action.page.url }}" class="bg-white text-primary-600 px-8 py-4 rounded-xl font-bold text-lg hover:bg-gray-100 transition-all duration-200 transform hover:scale-105 inline-block">
                                        Shop Now
                                    </a>
                                    {% endif %}
                                </div>
                            </div>
                            {% endif %}
                        </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </section>
            {% endif %}
        {% endfor %}
    {% else %}
    {# Fallback hero if no content #}
    <section class="hero-tw" aria-label="Welcome">
        <div class="hero-tw-content">
            <h1 class="hero-tw-title">Welcome to Fynd Storefront</h1>
            <p class="hero-tw-subtitle">Discover amazing products at great prices</p>
            <a href="/products" class="bg-white text-primary-600 px-8 py-4 rounded-xl font-bold text-lg hover:bg-gray-100 transition-all duration-200 transform hover:scale-105 inline-block">
                Shop Now
            </a>
        </div>
    </section>
    {% endif %}

    {# Featured Categories #}
    {% if categories and categories.length > 0 %}
    <section class="py-16 bg-white" aria-labelledby="featured-categories-title">
        <div class="container mx-auto px-4">
            <div class="flex items-center justify-between mb-12">
                <h2 id="featured-categories-title" class="text-3xl md:text-4xl font-bold text-gray-900">Shop by Category</h2>
                <a href="/categories" class="text-primary-600 hover:text-primary-700 font-semibold text-lg transition-colors duration-200">View All Categories →</a>
            </div>
            
            <div class="grid-tw-categories">
                {% for category in categories %}
                <article class="card-tw group cursor-pointer">
                    <a href="/category/{{ category.slug }}" class="block h-full">
                        {% if category.logo %}
                        <div class="aspect-square overflow-hidden bg-gray-100 flex items-center justify-center">
                            <img 
                                src="{{ category.logo.url }}"
                                alt="{{ category.logo.alt | default(category.name) }}"
                                class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
                                loading="lazy"
                            >
                        </div>
                        {% endif %}
                        <div class="p-6">
                            <h3 class="text-xl font-semibold text-gray-900 group-hover:text-primary-600 transition-colors duration-200">{{ category.name }}</h3>
                        </div>
                    </a>
                </article>
                {% endfor %}
            </div>
        </div>
    </section>
    {% endif %}

    {# Featured Products #}
    {% if featuredProducts and featuredProducts.length > 0 %}
    <section class="py-16 bg-gray-50" aria-labelledby="featured-products-title">
        <div class="container mx-auto px-4">
            <div class="flex items-center justify-between mb-12">
                <h2 id="featured-products-title" class="text-3xl md:text-4xl font-bold text-gray-900">Featured Products</h2>
                <a href="/products" class="text-primary-600 hover:text-primary-700 font-semibold text-lg transition-colors duration-200">View All Products →</a>
            </div>
            
            <div class="grid-tw-products">
                {% for product in featuredProducts %}
                {% include "partials/product-card.njk" %}
                {% endfor %}
            </div>
        </div>
    </section>
    {% endif %}

    {# Content Sections #}
    {% if homeContent and homeContent.sections %}
        {% for section in homeContent.sections %}
            {% if section.type !== 'hero_banner' and section.type !== 'banner' %}
            <section class="content-section content-section--{{ section.type }}" aria-label="{{ section.name }}">
                <div class="container">
                    {% if section.name %}
                    <h2 class="section-title">{{ section.name }}</h2>
                    {% endif %}
                    
                    {% if section.blocks %}
                    <div class="content-blocks content-blocks--{{ section.type }}">
                        {% for block in section.blocks %}
                        <div class="content-block">
                            {% if block.images and block.images.length > 0 %}
                            <div class="content-block__image">
                                <img 
                                    src="{{ block.images[0].url }}"
                                    alt="{{ block.images[0].alt | default(block.text | default('Content image')) }}"
                                    class="content-block__img"
                                    loading="lazy"
                                >
                            </div>
                            {% endif %}
                            
                            {% if block.text %}
                            <div class="content-block__content">
                                <h3 class="content-block__title">{{ block.text }}</h3>
                                {% if block.action and block.action.page %}
                                <a href="{{ block.action.page.url }}" class="content-block__link btn btn--secondary">
                                    Learn More
                                </a>
                                {% endif %}
                            </div>
                            {% endif %}
                        </div>
                        {% endfor %}
                    </div>
                    {% endif %}
                </div>
            </section>
            {% endif %}
        {% endfor %}
    {% endif %}

    {# Newsletter Signup #}
    <section class="py-16 bg-gradient-to-r from-primary-600 to-accent-600" aria-labelledby="newsletter-title">
        <div class="container mx-auto px-4">
            <div class="text-center text-white max-w-2xl mx-auto">
                <h2 id="newsletter-title" class="text-3xl md:text-4xl font-bold mb-4">Stay in the Loop</h2>
                <p class="text-xl text-primary-100 mb-8">
                    Get the latest updates on new products and exclusive offers!
                </p>
                <form class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto" action="/newsletter/subscribe" method="POST">
                    <label for="home-newsletter-email" class="sr-only">Email address</label>
                    <input 
                        type="email" 
                        id="home-newsletter-email"
                        name="email" 
                        class="flex-1 px-4 py-3 rounded-xl text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-primary-600" 
                        placeholder="Enter your email"
                        required
                    >
                    <button type="submit" class="bg-white text-primary-600 px-8 py-3 rounded-xl font-semibold hover:bg-gray-100 transition-colors duration-200 transform hover:scale-105">
                        Subscribe
                    </button>
                </form>
            </div>
        </div>
    </section>
</div>
{% endblock %}

{% block scripts %}
<script>
// Home page specific JavaScript
document.addEventListener('DOMContentLoaded', function() {
    // Initialize hero carousel if multiple slides
    const heroSlides = document.querySelectorAll('.hero__slide');
    if (heroSlides.length > 1) {
        // Hero carousel logic would go here
        console.log('Initialize hero carousel with', heroSlides.length, 'slides');
    }
    
    // Track featured product views
    const productCards = document.querySelectorAll('.product-card');
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                const productId = entry.target.dataset.productId;
                if (productId) {
                    // Analytics tracking would go here
                    console.log('Product viewed:', productId);
                }
            }
        });
    }, { threshold: 0.5 });
    
    productCards.forEach(card => observer.observe(card));
});
</script>
{% endblock %}
